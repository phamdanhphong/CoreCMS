
@using  CoreCMS.Extensions;
@model IEnumerable<SidebarMenu>
<div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
    <div class="menu_section">
        <h3>General</h3>
        <ul class="nav side-menu">
            @foreach (var menu in Model as IEnumerable<SidebarMenu>)
            {
                if (menu.Type == SidebarMenuType.Header)
                {
                    <li><a><i class="@menu.IconClassName"></i> @menu.Name <span class="fa fa-chevron-down"></span></a></li>
                }
                else if (menu.Type == SidebarMenuType.Link)
                {
                    var active = string.Empty;
                    if (menu.URLPath != "/" && @Context.Request.Path.Value.Contains(menu.URLPath))
                    {
                        active = "active";
                    }

                    <li class=" @active">
                        <a href="@menu.URLPath">
                            @if (menu.LinkCounter.Item1 > 0)
                            {
                                <i class="fa text-red @menu.IconClassName"></i>
                            }
                            else if (menu.LinkCounter.Item2 > 0)
                            {
                                <i class="fa text-yellow @menu.IconClassName"></i>
                            }
                            else if (menu.LinkCounter.Item3 > 0)
                            {
                                <i class="fa text-aqua @menu.IconClassName"></i>
                            }
                            else
                            {
                                <i class="fa  @menu.IconClassName"></i>
                            }
                            @menu.Name
                        </a>
                    </li>

                }
                else if (menu.Type == SidebarMenuType.Tree)
                {
                    var active = string.Empty;
                    if (menu.TreeChild.Any(x => @Context.Request.Path.Value.Contains(x.URLPath)))
                    {
                        active = "active";
                    }
                    <li class="@active">
                        <a href="@menu.URLPath"><i class="@menu.IconClassName"></i> @menu.Name  <span class="fa fa-chevron-down"></span></a>
                        <ul class="nav child_menu">
                            @foreach (SidebarMenu subMenu in menu.TreeChild)
                            {
                                active = string.Empty;
                                if (Context.Request.Path.Value.Contains(subMenu.URLPath))
                                {
                                    active = "active";
                                }
                                <li class="@active">
                                    <a href="@subMenu.URLPath">
                                        <i class="@subMenu.IconClassName"></i> @subMenu.Name
                                    </a>
                                </li>
                            }
                        </ul>
                    </li>
                }
            }

                   
           
        </ul>
    </div>
