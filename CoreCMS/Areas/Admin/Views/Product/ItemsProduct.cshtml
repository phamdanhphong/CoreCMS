
@{
    ViewData["Title"] = "ItemsProduct";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Scripts
    {
    <script src="~/app/controllers/Product/Index.js"></script>
    <script>
        var product = new ProductController();
        product.initialize();
    </script>
}

<div class="page-title">
    <div class="title_left">
        <h3>Danh sách sản phẩm</h3>
    </div>

    <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right">
            <div class="input-group">
                <input type="text" id="txtKeyword" class="form-control" placeholder="tìm kiếm...">
                <span class="input-group-btn">
                    <button class="btn btn-primary" id="btnSearch" type="button">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </div>
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right">
            <select id="dlProductCate" class="form-control">
                <option value="">--Tất cả danh mục--</option>
            </select>
        </div>
       
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Tiêu đề</th>
                            <th style="text-align: center">Hình ảnh</th>
                            <th style="text-align: center">Ngày đăng</th>
                            <th style="text-align: center">Lượt xem</th>
                            <th style="text-align: center">Trạng thái</th>
                            <th style="text-align: center">Công cụ</th>
                        </tr>
                    </thead>
                    <tbody id="tbl-content"></tbody>
                </table>
                <!--Pagination-->
                <div class="row">
                    <div class="col-sm-5">
                        <div class="dataTables_info" id="datatable-checkbox_info" role="status" aria-live="polite">
                            <select id="ddlShowPage">
                                <option value="10" selected="selected">10</option>
                                <option value="20">20</option>
                                <option value="30">30</option>
                                <option value="50">50</option>
                                <option value="100">100</option>
                            </select>
                            <span class="item-per-page">
                                bản ghi/trang.
                            </span>
                            Tổng số bản ghi: <strong id="lblTotalRecords"></strong>
                        </div>
                    </div><div class="col-sm-7">
                        <div class="dataTables_paginate paging_simple_numbers" id="datatable-checkbox_paginate">
                            <ul id="paginationUL"></ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
</div>

<script id="table-template" type="x-tmp-mustache">
    <tr>
        <th scope="row">{{Number}}</th>
        <td>
            {{Title}}
        </td>
        <td align="center">{{{Image}}}</td>
        <td align="center">{{DateCreated}}</td>
        <td align="center">{{TotalView}}</td>
        <td align="center">{{{Status}}}</td>
        <td align="center">
            <button class="btn btn-default btn-sm">
                <i class="fa fa-pencil"></i>
            </button>
            <button class="btn btn-danger btn-sm">
                <i class="fa fa-trash"></i>
            </button>
        </td>
    </tr>
</script>